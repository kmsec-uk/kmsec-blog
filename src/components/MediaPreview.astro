---
import { getMonthName } from '$/utils'
const { post } = Astro.props
var joiner = "with"
---
<div class="flex gap-6">
    <div class="sm:w-20 md:w-32">
        <div class="flex flex-col w-full text-center">
            <span class="text-6xl font-semibold text-gray-500 dark:text-gray-300">{ new Date(post.date).getDate() }</span>
            <span class="text-gray-400">{ `${getMonthName(post.date)} ${new Date(post.date).getFullYear()}` }</span>
        </div>
    </div>
    <div class="flex-1">
        <div class="flex flex-col mb-2">
            <h4 class="text-2xl font-semibold text-theme-primary dark:text-theme-dark-primary hover:underline">
                <a href={post.url} title={post.title} target="_blank">{post.title}</a>
            </h4>
            <div>
            <p class="text-lg leading-6 text-theme-primary dark:text-theme-dark-primary line-clamp-2">{post.host}
            {
                post.participants.length > 0 && `${joiner} ${post.participants.join(', ')}`
            }
            </p>
            </div>
        </div>
        <p class="text-lg leading-6 text-gray-700 dark:text-gray-400 line-clamp-2">
            {post.description}
        </p>
    </div>
</div>
